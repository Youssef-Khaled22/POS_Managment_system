<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="370.0" prefWidth="600.0" style="-fx-background-color: #2A0033;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pos_system.StartPageController">
   <Label layoutX="137.0" layoutY="233.0" text="Point Of Sale Management System" textFill="#9643a9">
      <font>
         <Font name="Vivaldi Italic" size="24.0" />
      </font>
   </Label>
   <CheckBox fx:id="customer_checkbox" layoutX="215.0" layoutY="308.0" mnemonicParsing="false" onAction="#isCustomer">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></CheckBox>
   <Label layoutX="55.0" layoutY="303.0" text="I'm a Customer" textFill="#e2c6e4">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>
   <Button fx:id="start_button" layoutX="447.0" layoutY="301.0" mnemonicParsing="false" onAction="#nextScene" prefHeight="32.0" prefWidth="102.0" style="-fx-background-color: #9643a9; -fx-background-insets: 0; -fx-background-radius: 20;" text="Start" textFill="#2a0033">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
   <ImageView fx:id="pos_image" fitHeight="306.0" fitWidth="497.0" layoutX="62.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@pos2.png" />
      </image>
   </ImageView>
   <Label layoutX="579.0" layoutY="-4.0" onMouseClicked="#exit" prefHeight="27.0" prefWidth="5.0" text="x" textFill="#e2c6e4">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Label>
   <Label layoutX="559.0" layoutY="-4.0" onMouseClicked="#minimize" prefHeight="16.0" prefWidth="13.0" text="-" textFill="#e2c6e4">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Label>
</AnchorPane>
